<h1>質問投稿</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for( :questions, url: questions_path, method: :post) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :content %>
      <%= f.text_field :content, class: 'form-control' %>

      <%= f.submit "質問する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>